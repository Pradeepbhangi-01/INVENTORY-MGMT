<% if(locals.lastVisit){%>
<div class="alert alert-primary" role="alert">
  Your Last visit on: <%= locals.lastVisit %>
</div>
<%}%>

<h1 class="mt-5 mb-4">Products</h1>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(products=>{ %>
    <tr>
      <th><%= products.id %></th>
      <td><%= products.name %></td>
      <td><%= products.desc %></td>
      <td scope="col"><%= products.price %></td>
      <td>
        <img src="<%= products.imageUrl %>" />
      </td>
      <td>
        <a href="/update-product/<%= products.id %>" class="btn btn-warning"
          >Update</a
        >
        <button
          class="btn btn-danger"
          onclick="deleteProduct('<%= products.id %>')"
        >
          Delete
        </button>
        <!-- <a href="/delete-product/<%= products.id %>" class="btn btn-danger"
          >Delete</a
        > -->
      </td>
    </tr>

    <% }) %>
  </tbody>
</table>
